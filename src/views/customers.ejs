<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <a href='/' class="navbar-brand">CRUD NodeJs Mysql</a>
    </nav>
    
    <div class="container">
        <div class="row mt-5">
            <div clas="col-md-7">
                <table class="table table-bordered table-hover">
                    <thead >
                        <tr>
                            <th>nÂ°</th>
                            <th>Nombre</th>
                            <th>Estado</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (data){%>
                            <% for(var i=0; i < data.length; i++){ %>
                                <tr>
                                    <td><%-(i+1) %></td>
                                    <td><%- data[i].nombre %></td>
                                    <td><%- data[i].estado %></td>
                                    <td>
                                        <a href="/delete/<%-data[i].id%>" class="btn btn-danger">Borrar</a>
                                        <a href="/update/<%-data[i].id%>" class="btn btn-info">Editar</a>
                                    </td>
                                    
                                </tr>
                            <%}%>
                        <%} %>
                    </tbody>
                </table>
            </div>
            <div clas="col-md-5">
                <div class="card-body">
                    <form action="/add" method="POST">
                        <div class="form-group">
                            <input type="text" name="nombre" placeholder="Nombre sensor" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="estado" placeholder="Abierto/Cerrado" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Guardar sensor
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>