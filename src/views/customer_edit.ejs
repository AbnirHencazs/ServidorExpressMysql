<body>
    <nav class="navbar navbar-dark bg-dark">
        <a href='/' class="navbar-brand">CRUD NodeJs Mysql</a>
    </nav>
    

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <div class="card">
                <div class="card-body">
                    <form action="/update/<%- data.id %>" method="POST">
                        <div class="form-group">
                            <input type="text" name="nombre" value="<%- data.nombre %>" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="text" name="estado" value="<%- data.estado %>" class="form-control">
                        </div>
                        <button type="submit" class="btn btn-primary">
                            Editar sensor
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


</body>
</html>